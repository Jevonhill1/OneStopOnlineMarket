<%= image_tag src="onestop_logo.png" %>
<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td><h3>Product</h3></td>
      <td><h3>Price</h3></td>
      <td><h3>Quantity</h3></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.quantity %></td>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>